if (Q.lvp_ideology == "Moderate") {
    Q.maier_points += 2;
}
if (Q.lvp_ideology == "Left") {
    Q.heuss_points += 2;
}

if (Q.heuss_points >= Q.maier_points && Q.heuss_points >= Q.dingeldey_points) {
